<div class="container mx-auto px-4 py-8">
  <!-- 検索フォーム -->
  <div class="mb-8">
    <div class="max-w-3xl mx-auto">
      <%= search_form_for @q, url: materials_path, method: :get do |f| %>
        <div class="relative">
          <%= f.search_field :title_cont,
              placeholder: "教材名で検索（例:プロを目指す人のためのRuby入門）",
              class: "w-full px-4 py-3 pr-24 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-base",
              value: params.dig(:q, :title_cont) %>
          <%= f.submit "検索", class: "absolute right-2 top-1/2 transform -translate-y-1/2 px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 検索結果のヘッダー -->
  <div class="mb-6">
    <% if @search_keyword.present? %>
      <h1 class="text-2xl font-bold text-gray-800 mb-2">
        "<%= @search_keyword %>" の検索結果
      </h1>
      <p class="text-gray-600">
        <%= @materials.count %>件の教材が見つかりました
      </p>
    <% else %>
      <h1 class="text-2xl font-bold text-gray-800 mb-2">
        教材一覧
      </h1>
      <p class="text-gray-600">
        全 <%= @materials.count %>件の教材
      </p>
    <% end %>
  </div>

  <!-- 検索結果の表示 -->
  <% if @materials.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @materials.each do |material| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-3 line-clamp-2">
            <%= link_to material.title, material_path(material), class: "hover:text-blue-600 transition" %>
          </h2>
          
          <% if material.description.present? %>
            <p class="text-gray-600 mb-4 line-clamp-3">
              <%= material.description %>
            </p>
          <% end %>
          
          <div class="flex items-center justify-between text-sm text-gray-500">
            <span><%= material.created_at.strftime("%Y年%m月%d日") %></span>
            <%= link_to "詳細を見る", material_path(material), class: "text-blue-500 hover:text-blue-700 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 検索結果が0件の場合 -->
    <div class="text-center py-16">
      <div class="mb-4">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      
      <h2 class="text-xl font-semibold text-gray-700 mb-2">
        該当する教材が見つかりませんでした
      </h2>
      
      <% if @search_keyword.present? %>
        <p class="text-gray-500 mb-6">
          別のキーワードで検索してみてください
        </p>
        <%= link_to "全ての教材を表示", materials_path, class: "inline-block px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition" %>
      <% end %>
    </div>
  <% end %>
</div>