<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">教材一覧</h1>
  
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @materials.each do |material| %>
      <div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">
          <%= link_to material.title, material_path(material), class: "hover:text-blue-600" %>
        </h2>
        
        <% if material.description.present? %>
          <p class="text-gray-600 text-sm mb-4 line-clamp-3">
            <%= truncate(material.description, length: 100) %>
          </p>
        <% end %>
        
        <div class="flex items-center justify-between mt-4">
          <%= link_to "詳細を見る", material_path(material), 
                      class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          
          <% if material.url.present? %>
            <%# link_to "外部リンク", safe_material_url(material),・・・念のために残しておく %>
            <%= link_to "外部リンク", material.url,
                                    target: "_blank", 
                        rel: "noopener noreferrer",
                        class: "text-sm text-gray-500 hover:text-gray-700" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>