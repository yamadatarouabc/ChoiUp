<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">教材を登録</h1>
    
    <%= form_with model: @material, local: true, class: "space-y-6" do |f| %>
      <%= render 'shared/error_messages', object: @material %>
      
      <div>
        <%= f.label :title, 'タイトル', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= f.text_field :title, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: '例：Ruby on Rails チュートリアル' %>
      </div>
      
      <div>
        <%= f.label :url, 'URL', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= f.url_field :url, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'https://example.com' %>
      </div>
      
      <div>
        <%= f.label :description, '説明（任意）', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= f.text_area :description, rows: 6, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', placeholder: 'この教材についての説明を入力してください' %>
        <p class="mt-1 text-sm text-gray-500">最大5000文字</p>
      </div>
      
      <div class="flex gap-4">
        <%= f.submit '登録する', class: 'px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors cursor-pointer' %>
        <%= link_to 'キャンセル', root_path, class: 'px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors' %>
      </div>
    <% end %>
  </div>
</div>