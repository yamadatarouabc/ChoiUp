<div class="bg-gray-50 rounded-lg p-4 mb-6">
  <%= form_with model: [material, review], local: true, class: "space-y-4" do |f| %>
    
    <!-- エラーメッセージ表示 -->
    <% if review.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
        <ul class="list-disc list-inside">
          <% review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- 学習開始時のレベル -->
    <div>
      <%= f.label :start_level, "学習開始時のレベル", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="space-y-2">
        <% Review.start_levels.each do |key, value| %>
          <label class="flex items-center">
            <%# f.radio_button :start_level, key, class: "mr-2" %>
            <%= f.radio_button :start_level, key, class: "mr-2 bg-white border-gray-300" %>
            <span class="text-sm text-gray-700"><%# Review.human_attribute_name("start_level.#{key}") %></span>
            <span class="text-sm text-gray-700"><%= I18n.t("activerecord.enums.review.start_level.#{key}") %></span>            
          </label>
        <% end %>
      </div>
    </div>

    <!-- 体感難易度 -->
    <div>
      <%= f.label :difficulty_rating, "体感難易度", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="space-y-2">
        <% Review.difficulty_ratings.each do |key, value| %>
          <label class="flex items-center">
            <%= f.radio_button :difficulty_rating, key, class: "mr-2" %>
            <span class="text-sm text-gray-700"><%# Review.human_attribute_name("difficulty_rating.#{key}") %></span>
            <span class="text-sm text-gray-700"><%= I18n.t("activerecord.enums.review.difficulty_rating.#{key}") %></span>
          </label>
        <% end %>
      </div>
    </div>

    <!-- コメント（任意） -->
    <div>
      <%= f.label :comment, "コメント（任意）", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%# f.text_area :comment, rows: 4, placeholder: "この教材についての感想や補足情報があれば記入してください", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.text_area :comment, rows: 4, placeholder: "この教材についての感想や補足情報があれば記入してください", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 placeholder-gray-400" %>
    </div>

    <!-- 送信ボタン -->
    <div>
      <%= f.submit "評価を投稿", class: "w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200" %>
    </div>
  <% end %>
</div>