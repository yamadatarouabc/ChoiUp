<div class="border border-gray-200 rounded-lg p-4 bg-white">
  <!-- ユーザー情報とレベル -->
  <div class="flex items-center justify-between mb-3">
    <div>
      <span class="font-medium text-gray-900"><%= review.user.display_name %></span>
      <span class="text-xs text-gray-500 ml-2">
        <%= l(review.created_at, format: :short) %>
      </span>
    </div>
  </div>

  <!-- レベルと難易度の表示 -->
  <div class="grid grid-cols-2 gap-4 mb-3">
    <!-- 学習開始時のレベル -->
    <div class="bg-blue-50 rounded p-3">
      <p class="text-xs text-gray-600 mb-1">学習開始時のレベル</p>
      <p class="text-sm font-medium text-gray-900">
        <%# enum_helpを用いた場合 review.start_level_i18n %>
        <%# Review.human_attribute_name("start_level.#{review.start_level}") %>
        <%= I18n.t("activerecord.enums.review.start_level.#{review.start_level}") %>
      </p>
    </div>

    <!-- 体感難易度 -->
    <div class="bg-green-50 rounded p-3">
      <p class="text-xs text-gray-600 mb-1">体感難易度</p>
      <p class="text-sm font-medium text-gray-900">
        <%# enum_helpを用いた場合 review.difficulty_rating_i18n %>
        <%# Review.human_attribute_name("difficulty_rating.#{review.difficulty_rating}") %>
        <%= I18n.t("activerecord.enums.review.difficulty_rating.#{review.difficulty_rating}") %>
      </p>
    </div>
  </div>

  <!-- コメント -->
  <% if review.comment.present? %>
    <div class="mt-3 p-2 bg-white rounded border border-gray-200">
      <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= review.comment %></p>
    </div>
  <% end %>
</div>