<% flash.each do |message_type, message| %>
  <div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md px-4" data-flash-message>
    <div class="rounded-lg shadow-lg p-4 <%= flash_class(message_type) %>">
      <div class="flex items-center">
        <div class="flex-1">
          <%= message %>
        </div>
        <button type="button" class="ml-4 text-gray-400 hover:text-gray-600" onclick="this.parentElement.parentElement.parentElement.remove()">
          <span class="text-2xl">&times;</span>
        </button>
      </div>
    </div>
  </div>
<% end %>