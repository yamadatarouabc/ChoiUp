<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">プロフィール編集</h1>

    <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: 'bg-white shadow rounded-lg p-6' do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :display_name, '表示名', class: 'block text-gray-700 font-bold mb-2' %>
        <%= f.text_field :display_name, class: 'text-gray-700 w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>

      <div class="flex gap-4">
        <%= f.submit '更新する', class: 'bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 cursor-pointer' %>
        <%= link_to 'キャンセル', profile_path, class: 'bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400' %>
      </div>
    <% end %>
  </div>
</div>